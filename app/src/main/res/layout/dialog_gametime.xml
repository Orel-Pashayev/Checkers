<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick time:"
        android:textSize="22sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:height="50dp"
            android:text="1 min"
            android:layout_margin="20dp"
            android:background="@drawable/button_style"
            android:layout_weight="1"
            android:id="@+id/one_min"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:width="50dp"
            android:height="50dp"
            android:text="3 min"
            android:background="@drawable/button_style"
            android:layout_weight="1"
            android:id="@+id/three_min"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:height="50dp"
            android:text="5 min"
            android:layout_margin="20dp"
            android:background="@drawable/button_style"
            android:layout_weight="1"
            android:id="@+id/five_min"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="10 min"
            android:width="50dp"
            android:height="50dp"
            android:background="@drawable/button_style"
            android:layout_weight="1"
            android:id="@+id/ten_min"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/button_style"
            android:layout_weight="1"
            android:text="15 min"
            android:id="@+id/fifteen_min"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:width="50dp"
            android:height="50dp"
            android:text="30 min"
            android:background="@drawable/button_style"
            android:layout_weight="1"
            android:id="@+id/thirty_min"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/button_style"
            android:layout_weight="1"
            android:text="45 min"
            android:id="@+id/fortyfive_min"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:width="50dp"
            android:height="50dp"
            android:text="60 min"
            android:background="@drawable/button_style"
            android:layout_weight="1"
            android:id="@+id/sixty_min"
            />
    </LinearLayout>

</LinearLayout>