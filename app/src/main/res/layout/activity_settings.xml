<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9FCADD"
    tools:context=".SettingsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings:"
        android:textStyle="bold"
        android:height="50dp"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose theme:"
        android:height="30dp"
        android:textSize="26sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:height="50dp"
            android:background="@drawable/button_blue"
            android:text="Blue"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:id="@+id/blue_bt"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_green"
            android:layout_margin="20dp"
            android:text="Green"
            android:width="50dp"
            android:height="50dp"
            android:layout_weight="1"
            android:id="@+id/green_bt"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:height="50dp"
            android:background="@drawable/button_brown"
            android:layout_margin="20dp"
            android:text="brown"
            android:layout_weight="1"
            android:id="@+id/brown_bt"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:width="50dp"
            android:background="@drawable/button_yellow"
            android:height="50dp"
            android:layout_weight="1"
            android:text="yellow"
            android:id="@+id/yellow_bt"
            />

    </LinearLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save and exit"
        android:id="@+id/save_bt"
        android:width="200dp"
        android:height="75dp"
        android:background="@drawable/button_style"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_margin="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign out from your account"
        android:id="@+id/sign_out_bt"
        android:layout_gravity="center"
        android:width="250dp"
        android:height="75dp"
        android:background="@drawable/button_style"/>

</LinearLayout>